extends ./pages/_layout.pug
block append content
  include ./pages/_loading.pug
  include ./pages/_alert.pug
  .wrapper
    include ./pages/_nav.pug
    .container#form
      .row
        .reserve-info
          .info-title 
            | Reservation
            br
            | information
          .form-reserve
            label(for="name")
              i.material-icons person
              span Name
            input#name.form-control(type="text", placeholder="ex. HexHotel")
            p.msg Please input guest name.
          .form-reserve
            label(for="phone")
              i.material-icons phone_android
              span phone (mobile)
            input#phone.form-control(type="tel", placeholder="ex. 0912345678")
            p.msg Please input correct phone number.
          button.send(type="submit" data-button="post") reserve now

        .reserve-detail
          .form-group
            .form-img
            .form-name
            .form-item.form-date
              label(for="date_checkin")
                i.material-icons date_range
              input(type="button" value="check-in & Check-out")
            .form-total
            .msg-alert
    include ./pages/_footer2.pug